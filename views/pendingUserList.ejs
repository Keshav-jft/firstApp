<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    th, td {
      padding: 5px;
    }
    th {
      text-align: left;
    }
  </style>
</head>
<body>
<p>List of Pending User</p>
<table style="width:60%">
  <tr>
    <th>id</th>
    <th>first name</th>
    <th>last name</th>
    <th><center>email</center> </th>
    <th>Action </th>
  </tr>
  <%for(let record of user){%>
  <tr>
    <td><%=record.id%></td>
    <td><%=record.firstName%></td>
    <td><%=record.lastName%></td>
    <td><%=record.email%></td>
    <td><a href="/approvedUser/<%=record.id%>">Approved</a></td>
  </tr>
    <%}%>

</table>
</body>
</html>
